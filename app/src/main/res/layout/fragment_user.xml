<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".fragmentos.UserFragment">

    <ImageView
        android:id="@+id/empleado"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="130dp"
        android:paddingTop="10dp"
        android:src="@drawable/personal2"></ImageView>
    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:text="MenÃº del Empleado"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold" />

    <!--Opcion de retroceso-->

    <ImageView
        android:id="@+id/retrocesoM"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:src="@drawable/fllecha" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:paddingTop="230dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardVerMensaje"
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:layout_marginLeft="130dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="10dp"
                card_view:cardBackgroundColor="@color/edi"
                card_view:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="170dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:padding="5dp"
                        android:paddingTop="5dp"
                        android:src="@drawable/soli"></ImageView>

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:padding="10dp"
                        android:text="Ver Mensajes"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_dark"
                        android:textSize="15sp"
                        android:textStyle="bold"></TextView>

                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardVerCatilla"
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:layout_marginLeft="130dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="10dp"
                card_view:cardBackgroundColor="@color/celesteagua"
                card_view:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="170dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:padding="5dp"
                        android:paddingTop="5dp"
                        android:src="@drawable/editarp"></ImageView>

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:padding="10dp"
                        android:text="Ver Cartilla"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_dark"
                        android:textSize="15sp"
                        android:textStyle="bold"></TextView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>


</FrameLayout>