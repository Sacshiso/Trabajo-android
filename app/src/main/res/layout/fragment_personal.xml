<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentos.PersonalFragment"
    android:background="#F0F0F0">

    <ImageView
        android:id="@+id/personal"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="130dp"
        android:paddingTop="10dp"
        android:src="@drawable/personal2"></ImageView>>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:text="GestiÃ³n del Personal"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/retrocesoM"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:src="@drawable/fllecha" />

    <ImageView
        android:id="@+id/platos"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="17dp"
        android:src="@drawable/logop" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:paddingTop="230dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <GridLayout
                android:id="@+id/idgrid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/name"
                android:layout_marginTop="0dp"
                android:columnCount="2"
                android:padding="25dp"
                android:rowCount="2"
                tools:ignore="ExtraText">
                //Creacion de las CardView para guardar las opciones del personal

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardAgregar"
                    android:layout_width="150dp"
                    android:layout_height="170dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="10dp"
                    card_view:cardBackgroundColor="@color/edi"
                    card_view:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="170dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:padding="5dp"
                            android:paddingTop="5dp"
                            android:src="@drawable/agregar1"></ImageView>

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="Agregar Personal"
                            android:textAlignment="center"
                            android:textColor="@android:color/background_dark"
                            android:textSize="15sp"
                            android:textStyle="bold"></TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardVer"
                    android:layout_width="150dp"
                    android:layout_height="170dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="10dp"
                    card_view:cardBackgroundColor="@color/celesteagua"
                    card_view:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="170dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:padding="5dp"
                            android:paddingTop="5dp"
                            android:src="@drawable/verper"></ImageView>

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="Ver Personal"
                            android:textAlignment="center"
                            android:textColor="@android:color/background_dark"
                            android:textSize="15sp"
                            android:textStyle="bold"></TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSolicitudes"
                    android:layout_width="150dp"
                    android:layout_height="170dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="10dp"
                    card_view:cardBackgroundColor="@color/ges"
                    card_view:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="170dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:padding="5dp"
                            android:paddingTop="5dp"
                            android:src="@drawable/soli"></ImageView>

                        <TextView
                            android:layout_width="121dp"
                            android:layout_height="62dp"
                            android:layout_gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="Solicitudes Personal"
                            android:textAlignment="center"
                            android:textColor="@android:color/background_dark"
                            android:textSize="15sp"
                            android:textStyle="bold"></TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardPago"
                    android:layout_width="150dp"
                    android:layout_height="170dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="10dp"
                    card_view:cardBackgroundColor="@color/menu"
                    card_view:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="170dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:padding="5dp"
                            android:paddingTop="5dp"
                            android:src="@drawable/pagoper"></ImageView>

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="Pago Personal"
                            android:textAlignment="center"
                            android:textColor="@android:color/background_dark"
                            android:textSize="15sp"
                            android:textStyle="bold"></TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </GridLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>